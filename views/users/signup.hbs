  <h2>Create an Account:</h2>

  {{#if message}}
    <p class="alert alert-danger">{{message}}</p>
  {{/if}}
  
  <form class="signupForm" action="/users/signup" method="post">
  <div class="form-group">
    <label for="name">Name</label>
      <input class ="form-control" type="text" name="name" placeholder="Name" id="name">
  </div>
  <div class="form-group">
    <label for="email">Email</label>
      <input class ="form-control" type="text" name="email" placeholder="Email" id="email">
  </div>
    <div class="form-group">
      <label for="email">Password</label>
      <input class="form-control" type="password" name="password" placeholder="Password" id="password">
    </div>
    <div class ="form-group">
      <label for="profilePhoto">Profile Photo</label>
      <input type="text" name="image" placeholder="image url" id="image">
    </div>
    <div class="form-group">
      <input type="submit" value="Sign Up" class="btn btn-default button">
    </div>
  </form>
